{{#extends 'base'}}

{{#block 'content'}}
<h3>Books</h3>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>ISBN</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        {{#each data}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{this.isbn}}</td>
            <td><a class='btn btn-primary btn-sm my-3' href="/book/{{this.id}}/update">Edit</a></td>
            <td><a class='btn btn-danger btn-sm my-3' href="/book/{{this.id}}/delete">Delete</a></td>
        </tr>
        {{/each}}
    </table>
</div>
<div>
    <a class='btn btn-success btn-sm my-3' href="/book/add">Add Book</a>
    <a class='btn btn-primary btn-sm my-3' href="/book/search">Search Book</a>
</div>
{{/block}}

{{/extends}}